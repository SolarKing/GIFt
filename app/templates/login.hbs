<div class="alt_background_wrapper">
  <form class="account_box">

    <h1 class="form_header">Login</h1>

    <div class="input_section">
      <label class="input_label" for="">Username</label>
      {{input class="input_field" placeholder="Enter your username here..."}}
    </div>

    <div class="input_section">
      <label class="input_label" for="">Password</label>
      {{input class="input_field" placeholder="Enter your password here..." type="password"}}
    </div>

    <div class="input_section">
      <button class="submit_account" type="button">Login</button>
    </div>

  </form>
</div>
